<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="D01InputKit.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#f50057" Padding="24" CornerRadius="0">
                <Label Text="Welcome to 
                       Xamarin.Forms.InputKit!" HorizontalTextAlignment="Center" TextColor="White" FontSize="28"/>
            </Frame>
            <Button x:Name="signUp" FontSize="Medium" BorderColor="White" BorderWidth="2" Padding="30,10,30,10"
                    FlexLayout.AlignSelf="Center" CornerRadius="50"  HorizontalOptions="CenterAndExpand" 
                    Text="RadioButton" Clicked="rb_Clicked" TextColor="White" BackgroundColor="#f50057"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
